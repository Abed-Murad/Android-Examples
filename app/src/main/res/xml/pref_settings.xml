<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="@string/pref_show_first_name_default"
        android:key="@string/pref_show_first_name_key"
        android:summaryOff="@string/pref_show_false"
        android:summaryOn="@string/pref_show_true"
        android:title="@string/pref_show_first_name_title" />

    <CheckBoxPreference
        android:defaultValue="@string/pref_show_last_name_default"
        android:key="@string/pref_show_last_name_key"
        android:summaryOff="@string/pref_show_false"
        android:summaryOn="@string/pref_show_true"
        android:title="@string/pref_show_last_name_title" />

    <EditTextPreference
        android:defaultValue="@string/pref_city_name_default"
        android:key="@string/pref_city_name_key"
        android:title="@string/pref_city_name_title" />

    <ListPreference
        android:defaultValue="red"
        android:entries="@array/pref_color_option_labels"
        android:entryValues="@array/pref_color_option_values"
        android:key="favorite_color"
        android:title="Favorite Color" />

</PreferenceScreen>